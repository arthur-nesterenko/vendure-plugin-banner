{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2021",
        "strict": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "types": ["node"],
        "declaration": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "exclude": ["src/ui"],
    "include": ["src"]
}
