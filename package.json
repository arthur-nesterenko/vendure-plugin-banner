{
    "name": "vendure-banner-plugin",
    "version": "1.0.3",
    "description": "A plugin for the Vendure e-commerce framework designed to enhance the visual appeal and interactivity of your e-commerce site by allowing for the creation of dynamic banners that can be added to any page.",
    "author": "Arthur Nestererenko <arthur.nesterenko.dev@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arthur-nesterenko/vendure-plugin-banner.git"
    },
    "license": "MIT",
    "private": false,
    "engines": {
        "node": ">=22.0.0"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "run:server": "ts-node ./dev-server/index.ts",
        "run:worker": "ts-node ./dev-server/index-worker.ts",
        "watch": "ts-node-dev  ./dev-server/index.ts",
        "start": "concurrently npm:run:*",
        "build": "rimraf dist && npm run copy-assets && npm run codegen && tsc",
        "copy-assets": "ts-node scripts/copy-assets.ts",
        "test": "jest --preset=\"ts-jest\"",
        "codegen": "ts-node codegen.ts",
        "prepare": "husky",
        "lint": "eslint .",
        "prettify": "prettier --write . --html-whitespace-sensitivity ignore",
        "lint:fix": "npm run lint --fix",
        "commit": "git-cz"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@commitlint/cz-commitlint": "^19.6.1",
        "@eslint/js": "^9.21.0",
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-document-nodes": "^4.0.16",
        "@graphql-codegen/typescript-operations": "^4.6.1",
        "@types/eslint__js": "^8.42.3",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "29.5.14",
        "@types/node": "^22.15.30",
        "@vendure/admin-ui-plugin": "3.3.3",
        "@vendure/asset-server-plugin": "3.3.3",
        "@vendure/core": "^3.3.3",
        "@vendure/graphiql-plugin": "^3.3.3",
        "@vendure/testing": "3.3.3",
        "@vendure/ui-devkit": "^3.3.3",
        "better-sqlite3": "^11.10.0",
        "commitizen": "^4.3.1",
        "concurrently": "^9.1.2",
        "copyfiles": "^2.4.1",
        "dotenv": "^16.5.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.3",
        "fs-extra": "^11.3.0",
        "graphql-tag": "^2.12.6",
        "husky": "^9.1.7",
        "inquirer": "9",
        "jest": "29.7.0",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-jest": "29.3.4",
        "ts-node": "10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "5.8.3",
        "typescript-eslint": "^8.25.0"
    }
}
